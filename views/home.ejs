<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        body{
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        table {
        margin-top:20px;
        width: 100%;
        border-collapse: collapse; /* cleaner borders */
        table-layout: fixed; /* makes columns equal width */
        }

        th, td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
        word-wrap: break-word;
        white-space: normal; 
        }
    </style>
</head>
<body>
    <h1> URL Shortener</h1>
    <% if (locals.id) { %>
         <p>http://localhost:8001/<%= locals.id %></p>
    <% } %>
    <div>
        <form method="POST" action="/url">
            <label>Enter a URL to shorten</label>
            <input 
               type="text" 
               placeholder="http://example.com"
               name="url"
            />
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S.No.</th>
                    <th>Short Id</th>
                    <th>Redirects to</th>
                    <th>No. of Clicks Observed</th>
                </thead>
                <tbody>
                    <% locals.urls.forEach((url,index) => { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectUrl %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>